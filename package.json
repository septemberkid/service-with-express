{
  "name": "service",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "clean": "wireit",
    "build": "wireit",
    "build:production": "wireit",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/ --fix",
    "test": "jest --forceExit --detectOpenHandles --passWithNoTests",
    "deploy:dev": "wireit"
  },
  "wireit": {
    "clean": {
      "command": "rimraf dist temp logs"
    },
    "compile": {
      "command": "swc src -d dist --copy-files",
      "dependencies": [
        "clean"
      ]
    },
    "build": {
      "command": "copy .\\ecosystem.config.js.development.stub .\\dist\\ecosystem.config.js && copy .env.development dist\\.env.development",
      "dependencies": [
        "compile"
      ]
    },
    "build:production": {
      "command": "copy .\\ecosystem.config.js.production.stub .\\dist\\ecosystem.config.js && copy .env.production dist\\.env.production",
      "dependencies": [
        "compile"
      ]
    },
    "deploy": {
      "command": "pm2 start dist/ecosystem.config.js --only spk-mbkm-service-api"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mikro-orm/core": "^5.6.14",
    "@mikro-orm/postgresql": "^5.6.14",
    "@mikro-orm/reflection": "^5.6.14",
    "@types/express": "^4.17.17",
    "@types/node-schedule": "^2.1.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "i18n": "^0.15.1",
    "inversify": "^6.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.4.3",
    "jose": "^4.13.1",
    "minio": "^7.0.33",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.2",
    "routing-controllers-openapi": "^4.0.0",
    "swagger-ui-express": "^4.6.2",
    "ts-jose": "^4.13.1",
    "tsc-alias": "^1.8.5",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "xml2js": ">=0.5.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.40",
    "@types/compression": "^1.7.2",
    "@types/jest": "^29.5.0",
    "@types/minio": "^7.0.17",
    "@types/multer": "^1.4.7",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.59.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "wireit": "^0.9.5"
  }
}
